<% if action == :new %>
  <% action_url = cats_url %>
<% else %>
  <% action_url = cat_url(cat) %>
<% end %>


<form class="" action=" <%= action_url %>" method="post">

  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat_name">Name</label>
  <input id="cat_name"type="text" name="cat[name]" value="<%= cat.name %>">
  <br>
  <label>
    Sex
    <input type="radio" name="cat[sex]" value="m" checked="<%= cat.sex == 'm' ? true : false %>">
        Male
    <input type="radio" name="cat[sex]" value="f" checked="<%= cat.sex == 'f' ? true : false %>">
        Female
  </label>
<br>
  <label for="cat_color">Color</label>
  <select id="cat_color" name="cat[color]">
    <% Cat.CAT_COLORS.each do |color| %>
      <option value="<%= color %>"  <%= cat.color == color ? 'selected' : '' %> > <%= color.titleize %> </option>
    <% end %>
  </select>
<br>
  <label for="cat_birth_date">Birth date</label>
  <input id="cat_birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
<br>
  <label for="cat_description">Description</label>
  <textarea id="cat_description" name="cat[description]">   <%= cat.description %>    </textarea>
<br>
  <!-- <input type="submit" name="" value="Add cat"> -->

  <% if action == :edit %>
    <input type="submit" name="" value="Update cat">
    <% else %>
    <input type="submit" name="" value="Add cat">
  <% end %>
</form>
